---
name: mongodb-acceptance-tests

consumes:
  - name: server
    type: mongod
    optional: true
  - name: shard-server
    type: shardsvr
    optional: true
  - name: config-server
    type: cfgsvr
    optional: true
  - name: mongos
    type: mongos
    optional: true 
packages:
  - golang-1.14-linux
  - mongodb-acceptance-tests

templates:
  config.json.erb: config.json
  errand.sh.erb: bin/run
  ssl/CA.crt.erb: ssl/CA.crt

properties:
  mongo_test_suite:
    description: Test suites to run (["readwrite"] or ["replicaset"])
    default: ["readwrite"] 
  timeout_scale:
    description: Timeout scale to be used by the acceptance tests errand
    default: 1.0
